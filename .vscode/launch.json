{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Run File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Streamlit: Run App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/streamlit",
            "args": [
              "run",
              "streamlit_app.py"
            ],
            "console": "integratedTerminal",
          }
    ]
}